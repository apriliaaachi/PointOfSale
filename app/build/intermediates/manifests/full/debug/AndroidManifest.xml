<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zyra.uitest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="27" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zyra.pointofsale.LoginActivity"
            android:label="LOGIN ACTIVITY"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zyra.pointofsale.MainActivity"
            android:label="Point Of Sale"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zyra.pointofsale.BarangActivity"
            android:parentActivityName="com.zyra.pointofsale.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zyra.pointofsale.Payment_status_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zyra.pointofsale.EmployeeActivity"
            android:label="Employee"
            android:parentActivityName="com.zyra.pointofsale.Payment_status_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zyra.pointofsale.PopActivity"
            android:theme="@style/AppTheme.PopMe" />
        <activity
            android:name="com.zyra.pointofsale.CreateItemActivity"
            android:label="Create Item"
            android:parentActivityName="com.zyra.pointofsale.Payment_status_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zyra.pointofsale.RecordTransactionActivity"
            android:label="Record Transaction"
            android:parentActivityName="com.zyra.pointofsale.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>